// VIP Image Generator for MrMuneebAli
// Generates image directly into assets/bot_image.jpg
// Run: node generate_vip_image.js
// Make sure `canvas` is installed: npm install canvas

const fs = require("fs");
const { createCanvas } = require("canvas");

// File to save (overwrite existing)
const filePath = "./assets/bot_image.jpg";

// Canvas size
const width = 800;
const height = 600;
const canvas = createCanvas(width, height);
const ctx = canvas.getContext("2d");

// Background VIP gradient
const gradient = ctx.createLinearGradient(0, 0, width, height);
gradient.addColorStop(0, "#FFD700"); // Gold
gradient.addColorStop(1, "#000000"); // Black
ctx.fillStyle = gradient;
ctx.fillRect(0, 0, width, height);

// Stylish text
ctx.font = "bold 60px 'Orbitron', sans-serif";
ctx.fillStyle = "#FFFFFF";
ctx.textAlign = "center";
ctx.fillText("ğ‘´ğ’“.ğ‘´ğ’–ğ’ğ’†ğ’†ğ’ƒğ‘¨ğ’ğ’Š", width / 2, height / 2);

// Optional: DP style circle
ctx.strokeStyle = "#FFD700";
ctx.lineWidth = 10;
ctx.beginPath();
ctx.arc(width / 2, height / 2 - 100, 80, 0, Math.PI * 2);
ctx.stroke();

// Save image (overwrite existing bot_image.jpg)
const buffer = canvas.toBuffer("image/jpeg");
fs.writeFileSync(filePath, buffer);

